{
  "ecmaFeatures": {
    "modules": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "extends": "airbnb",
  "rules": {
    "brace-style": [2, "stroustrup"],
    "indent": ["error", 4, {
      "SwitchCase": 1
    }],
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0
  }
}
